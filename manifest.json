{
  "name": "SalesPoint Chrome",
  "description": "The SalesPoint Point-of-Sale check out kiosk app for Chrome",
  "version": "0.0.0.1",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
    "icons": { 
        "16": "images/icon_16.png", 
        "48": "images/icon_48.png", 
        "128": "images/icon_128.png" 
    },
  
  "default_locale": "en",
  "permissions": [
      "accessibilityFeatures.read",
      "accessibilityFeatures.modify"
  ],
  "sandbox": {
      "pages": [
          "scripts/sandbox-scripts.html"
      ]
  },
  "kiosk_enabled": true
}